<p>
  <strong>Name:</strong>
  <%= @person.name %>
</p>

<h2>Events</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
  <% @events.order(:year).each do |event| %>
    <tr>
      <td><%= event.title %></td>
      <td><%= event.description %></td>
      <td><%= event.year %></td>
      <td><%= link_to 'Show', event %></td>
      <td><%= link_to 'Edit', edit_event_path(event) %></td>
      <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>

<h2>Schools</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year start</th>
      <th>Year end</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <% @schools.each do |school| %>
    <tr>
      <td><%= school.name %></td>
      <td><%= school.year_start %></td>
      <td><%= school.year_end %></td>
      <td><%= link_to 'Show', school %></td>
      <td><%= link_to 'Edit', edit_school_path(school) %></td>
      <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>

